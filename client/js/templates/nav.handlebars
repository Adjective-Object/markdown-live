<h4>Files</h4>

{{#each dirs}}

    <span class="dir__title" title="{{this.title}}">
        {{@key}}
    </span>

    <div class="dir__content">
            <ul class="fix">

            {{#if this.length }}

            {{#each this }}
                <li>
                    <a  href="#"
                        data-file="{{this._id}}"
                        title="{{this.path}}"
                        {{#if this.selected}}class="active"{{/if}}
                        />
                        {{this.name}}
                    </a>
                </li>
            {{/each}}

            {{else}}

                <li>
                    <span>No files!</span>
                </li>

            {{/if}}

            </ul>
        </span>
    </div>
{{/each}}
