#!/usr/bin/env node

var path = require('path');
var argv = require('minimist')(process.argv.slice(2), {
    alias: { 
        h: 'help',
        p: 'port',
        d: 'dir',
        v: 'verbose', 
        f: 'file',
        s: 'socket'
    }
});

global.$dirname = path.join(__dirname, '..' );
global.$require = require;

var mdlive = require(path.join(__dirname, '..', 'server')).default;
new mdlive(argv);
