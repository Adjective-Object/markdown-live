#!/usr/bin/env node

var path = require('path'),
	argv = require('minimist')(process.argv.slice(2), {
        alias: { 
            h: 'help',
            p: 'port',
            d: 'dir',
            v: 'verbose', 
            f: 'file',
            s: 'socket'
        }
    });

global.nodeRequire = require;

var mdlive = require(path.join(__dirname, '..', 'server'));
mdlive();
