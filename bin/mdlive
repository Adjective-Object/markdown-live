#!/usr/bin/env node
var path = require('path');
var minimist = require('minimist');
var mdlive = require(path.join(__dirname, '..', 'app'));

var argv = minimist( process.argv.slice(2), {
  alias: { 
    h: 'help',
    p: 'port',
    d: 'dir',
    v: 'verbose', 
    f: 'file',
    s: 'socket',
    b: 'browser'
  }
});

new mdlive(argv);
